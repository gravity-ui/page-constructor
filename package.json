{
  "name": "@gravity-ui/blog-constructor",
  "version": "1.0.0",
  "description": "Gravity UI Blog Constructor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gravity-ui/blog-constructor"
  },
  "files": [
    "build",
    "styles",
    "server"
  ],
  "sideEffects": [
    "*.css",
    "*.scss"
  ],
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "typings": "build/esm/index.d.ts",
  "scripts": {
    "deps:install": "npm ci",
    "deps:truncate": "npm prune --production",
    "lint:fix": "run-s lint:js:fix lint:styles:fix lint:prettier:fix typecheck",
    "lint:js": "eslint '**/*.{js,jsx,ts,tsx}' --max-warnings=0",
    "lint:js:fix": "eslint '**/*.{js,jsx,ts,tsx}' --max-warnings=0 --quiet --fix",
    "lint:styles": "stylelint '{styles,src}/**/*.scss'",
    "lint:styles:fix": "stylelint **/*.scss -s scss --fix",
    "lint:prettier": "prettier --check '**/*.{js,jsx,ts,tsx,css,scss,json,yaml,yml,md}'",
    "lint:prettier:fix": "prettier --write '**/*.{js,jsx,ts,tsx,css,scss,json,yaml,yml,md}'",
    "lint": "run-p lint:js lint:styles lint:prettier typecheck",
    "typecheck": "tsc --noEmit",
    "dev": "npm run storybook:start",
    "start": "node dist",
    "clean": "gulp clean",
    "build": "npm run clean && gulp",
    "storybook:start": "TS_NODE_PROJECT=.storybook/tsconfig.json start-storybook -p 7010",
    "storybook:build": "TS_NODE_PROJECT=.storybook/tsconfig.json build-storybook -c .storybook -o storybook-static .storybook/public",
    "prepublishOnly": "npm run lint && npm run build",
    "prepare": "husky install",
    "svgo": "svgo --config svgo.config.js",
    "svgo:all": "svgo --config svgo.config.js -r -f assets",
    "test": "jest --maxWorkers=50%",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watchAll --maxWorkers=25%"
  },
  "dependencies": {
    "@gravity-ui/i18n": "^1.0.0",
    "bem-cn-lite": "^4.0.0",
    "fast-html-parser": "^1.0.1",
    "isomorphic-dompurify": "^0.20.0",
    "lodash": "^4.17.21",
    "react-helmet": "^6.1.0",
    "react-player": "^2.9.0",
    "react-slick": "^0.28.1",
    "react-spring": "~9.6.0",
    "react-transition-group": "^4.4.2",
    "react-waypoint": "^10.1.0",
    "sanitize-html": "^2.6.1",
    "snakecase-keys": "^5.1.0",
    "typograf": "^6.14.0",
    "ua-parser-js": "^0.7.28",
    "url": "^0.11.0",
    "url-join": "^5.0.0"
  },
  "peerDependencies": {
    "@doc-tools/transform": "^2.9.0",
    "@gravity-ui/uikit": "^3.20.0",
    "@gravity-ui/page-constructor": "^1.22.0",
    "react": "^16.0.0 || ^17.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@doc-tools/transform": "^2.9.0",
    "@gravity-ui/eslint-config": "^1.0.2",
    "@gravity-ui/page-constructor": "^1.23.0",
    "@gravity-ui/prettier-config": "^1.0.1",
    "@gravity-ui/stylelint-config": "^1.0.0",
    "@gravity-ui/tsconfig": "^1.0.0",
    "@gravity-ui/uikit": "^3.20.0",
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.5.10",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/addon-viewport": "^6.3.12",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.5.10",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^12.1.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/fast-html-parser": "^1.0.2",
    "@types/jest": "^29.2.5",
    "@types/js-yaml": "^4.0.5",
    "@types/lodash": "^4.14.176",
    "@types/react": "^18.0.26",
    "@types/react-helmet": "^6.1.5",
    "@types/react-slick": "^0.23.7",
    "@types/react-transition-group": "^4.4.4",
    "@types/sanitize-html": "^2.6.0",
    "@types/ua-parser-js": "^0.7.36",
    "eslint": "^8.0.0",
    "eslint-plugin-local": "./eslint-plugin-local",
    "eslint-plugin-testing-library": "^5.9.1",
    "gulp": "^4.0.2",
    "gulp-dart-sass": "^1.0.2",
    "gulp-rename": "^2.0.0",
    "gulp-replace": "^1.1.3",
    "gulp-typescript": "^6.0.0-alpha.1",
    "html-loader": "^1.3.2",
    "husky": "^7.0.4",
    "jest": "^29.3.1",
    "jest-environment-jsdom": "^29.3.1",
    "jest-transform-css": "^6.0.1",
    "js-yaml": "^3.14.1",
    "lint-staged": "^11.2.6",
    "markdown-loader": "^6.0.0",
    "move-file-cli": "^3.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.14",
    "prettier": "2.4.1",
    "react": "^17.0.0",
    "react-dom": "^17.0.0",
    "rimraf": "^3.0.2",
    "sass": "^1.54.4",
    "sass-loader": "^10.3.1",
    "stylelint": "^14.11.0",
    "stylelint-scss": "^4.0.0",
    "svg-sprite-loader": "^6.0.11",
    "ts-jest": "^29.0.5",
    "typescript": "^4.9.3",
    "webpack": "^4.46.0"
  },
  "lint-staged": {
    "*.{css,scss}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix --quiet",
      "prettier --write"
    ],
    "*.{json,yaml,yml,md}": [
      "prettier --write"
    ]
  }
}
