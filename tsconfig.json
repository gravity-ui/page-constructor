{
  "extends": "@gravity-ui/tsconfig/tsconfig",
  "compilerOptions": {
    "target": "es2022",
    "allowJs": true,
    "outDir": "build/esm",
    "module": "esnext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "importHelpers": true,
    "paths": {
      "widget": ["../widget"]
    }
  },

  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
